# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space

[*.js]
charset = utf-8
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

[{*.json, *.yml, .*rc}]
indent_size = 2